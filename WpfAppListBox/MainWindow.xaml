<Window x:Class="WpfAppListBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppListBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox Margin="5">
            <CheckBox x:Name="chkTom" Content="Tom"></CheckBox>
            <CheckBox x:Name="chkDavy" Content="Davy"></CheckBox>
            <CheckBox x:Name="chkSally" Content="Sally"></CheckBox>
            <Button Content="Mess"></Button>
            <Button Content="Owen"></Button>
            <Button Content="Victor"></Button>
        </ListBox>
    </Grid>
</Window>
