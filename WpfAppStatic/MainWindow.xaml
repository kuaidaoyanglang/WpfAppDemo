<Window x:Class="WpfAppStatic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppStatic"
        mc:Ignorable="d"
        Title="{x:Static local:MainWindow.WindowTitle}" Height="450" Width="800">
    <Grid>
        <TextBlock  FontSize="32" Text="{x:Static local:MainWindow.ShowText}"></TextBlock>
    </Grid>
</Window>
